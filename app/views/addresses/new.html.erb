<div class="main addresses-new">
  <div class="container">
    <h1 class="form-heading">注文確認画面</h1>
      <p>
        <p hidden>
          <%= @order.id %>
          <%= @order.user_id %>
          <%= @order.item_id %>
          <%= @order.cart_id %>
        </p>
        <label>商品名:</label>
        <%= @onitems.name %><br>
        <label>注文金額:</label>
        <%= @order.total_price %><label>円</label>
      </p>
      
      <%= form_tag("/addresses/#{@order.id}/create") do %>
        <div class="form">
          <div class="form-body">
            
            <p class="testcard">
              <label>テストカード</label><br>
              カード番号: 4242424242424242<br>
              有効期限: 12/30<br>
              CVC: 123<br>
              カード名義: TARO YAMADA
            <p>
            
            <script
              type="text/javascript"
              src="https://checkout.pay.jp/"
              class="payjp-button"
              data-key="pk_test_1a7952930243b7a108514314"
              data-submit-text="トークンを作成する"
              data-partial="true">
            </script>
            
            <div class="address">
              <div class="address-family-name">
                <label>姓</label>
                  <input type="text" name="family_name" placeholder="例:田中" required>
              </div>
              <div class="address-given-name">
                <label>名</label>
                  <input type="text" name="given_name" placeholder="例:太郎" required>
              </div>
              <div class="address-tel">
                <label>電話番号</label>
                  <input type="tel" name="tel" placeholder="例:090-0000-0000" required>
              </div>
              <div class="address-email">
                <label>メールアドレス</label>
                  <input type="email" name="email" placeholder="例:abc@gmail.com" required>
              </div>
              <div class="address-postal">
                <label>郵便番号</label>
                  <input type="postal" name="postal_code" placeholder="例:899-0000" required>
              </div>
              <div class="address-level1">
                <label>都道府県</label>
                  <input type="address" name="address_level1" placeholder="例:◯◯◯県" required>
              </div>
              <div class="address-level2">
                <label>市区町村</label>
                  <input type="address" name="address_level2" placeholder="例:◯◯◯市" required>
              </div>
              <div class="address-line1">
                <label>番号・マンション名1</label>
                  <input type="address" name="address_line1" placeholder="例:1234-56,1234番地56" required>
              </div>
              <div class="address-line2">
                <label>番号・マンション名2</label>
                  <input type="address" name="address_line2" placeholder="例:コーポ◯◯,マンション◯◯">
              </div>
              <div class="address-organization">
                <label>会社名</label>
                  <input type="organization" name="organization" placeholder="例:株式会社◯◯,(株)◯◯">
              </div>
            </div>
          </div>
        </div>
        <input type="submit" value="注文確定">
      <% end %>
  </div>
</div>